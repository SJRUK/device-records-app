<!DOCTYPE html><html lang="en">
    <head>  <meta charset="UTF-8">  
    <title>TM470 - Device Records App</title></head>
    <body>   

        <h1>Device Records Database</h1>

        <h2>Add device</h2>
        <form action="/devices" method="POST">  
            <input type="text" placeholder="Asset number" name="assetTag">  
            <input type="text" placeholder="Name" name="name">  
            <input type="text" placeholder="Organisation" name="organisation">  
            <input type="text" placeholder="Line manager" name="lineManager"> 
            <label for="Date required">Date required: </label>
            <input type="date" name="dateRequired"> 
            <button type="submit">Submit</button>
        </form>
        
        <h2>Devices currently held in safe</h2>

        <ul class="devices">
        <!-- Loop through devices -->
        <% for(var i = 0; i < devices.length; i++) {%>
        <li class="device">
          <!-- Output assetTag from the iterated quote object -->
          <span><%= devices[i].assetTag %></span>:
          <!-- Output name from the iterated quote object -->
          <span><%= devices[i].name %></span>:
          <!-- Output organisation from the iterated quote object -->
          <span><%= devices[i].organisation %></span>:
          <!-- Output line manager from the iterated quote object -->
          <span><%= devices[i].lineManager %></span>:
          <!-- Output date from the iterated quote object -->
          <span><%= devices[i].dateRequired %></span>
          </li>
          <% } %>
        </ul>

<div>
    <h2>Search Devices</h2>
    <p>Replace first Yoda's quote with a quote written by Darth Vader</p>
    <button id="update-button">Replace Yoda's quote</button>
  </div>
  

  <div>
    <h2>Remove Darth Vader!</h2>
    <p>
      Delete one Darth Vader's quote. Does nothing if there are no more Darth
      Vader's quote
    </p>
    <button id="delete-button">Delete Darth Vader's quote</button>
  </div>

  <div id="message"></div>
  
    </body>


    <script src="/main.js"></script>
</html>